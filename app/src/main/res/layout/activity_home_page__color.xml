<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage_Color">

    <RelativeLayout
        android:id="@+id/hedding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn71">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/hedding" />


    <RelativeLayout
        android:id="@+id/buttonslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20.0dip"
                android:gravity="center">

                <TextView
                    android:id="@+id/enableTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Enable Color Call Screen"
                    android:textColor="#000"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/callerIdIV"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/off_switch" />
            </RelativeLayout>

            <Button
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/setthen"
                android:fontFamily="sans-serif-condensed"
                android:text="Select Theme"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/settingsicn"
                android:fontFamily="sans-serif-condensed"
                android:text="Settings"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/privacyicn"
                android:fontFamily="sans-serif-condensed"
                android:text="Privacy Policy"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/previewicn"
                android:fontFamily="sans-serif-condensed"
                android:text="Preview"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/shareicn"
                android:fontFamily="sans-serif-condensed"
                android:text="Share App"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn21"
                android:drawableLeft="@drawable/appsicon"
                android:fontFamily="sans-serif-condensed"
                android:text="More App"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</RelativeLayout>